{
  "$schema": "http://json.schemastore.org/proxies",

  "proxies": {

    "CreateRating_Proxy": {
      "matchCondition": {
        "methods": [ "POST" ],
        "route": "/api/ratings"
      },
      "backendUri": "https://localhost/api/CreateRating"
    },

    "GetRatings_Proxy": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/api/ratings"
      },
      "backendUri": "https://localhost/api/GetRatings"
    },

    "GetRating_Proxy": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/api/ratings/{id}"
      },
      "backendUri": "https://localhost/api/GetRating/{id}"
    },

    "GetProducts_Proxy": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/api/products"
      },
      "backendUri": "https://serverlessohproduct.trafficmanager.net/api/GetProducts"
    },

    "GetProduct_Proxy": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/api/products/{productId}"
      },
      "backendUri": "https://serverlessohproduct.trafficmanager.net/api/GetProduct",
      "requestOverrides": {
        "backend.request.querystring.productId": "{productId}"
      }
    },

    "GetUser_Proxy": {
      "matchCondition": {
        "methods": [ "GET" ],
        "route": "/api/users/{userId}"
      },
      "backendUri": "https://serverlessohuser.trafficmanager.net/api/GetUser",
      "requestOverrides": {
        "backend.request.querystring.userId": "{userId}"
      }
    }
  }
}
